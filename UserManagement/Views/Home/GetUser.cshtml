@model List<UserManagement.Models.User>
@{
    int i = 0;
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">SN</th>
            <th scope="col">User Name</th>  
            <th scope="col">Department Name</th>                      
            <th scope="col">Email</th>
            
        </tr>
    </thead>
    <tbody>
            @foreach(UserManagement.Models.User item in Model)
            {
                i++;
            <tr> 
                <td>@i</td>
                
                <td>@item.name</td>
                <td>@item.Department.DepartmentName</td>
                
                <td>@item.email</td>               
                <td><a href="GetUserById/@item.id">View</a></td>
                <td><a href="DeleteUserById/@item.id">Delete</a></td>
            </tr>
            }
    </tbody>
</table>