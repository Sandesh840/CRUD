@model UserManagement.Models.User

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">User Management</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Home" asp-action="AddUser">
                        <div class="form-group">
                            <label for="name">Name:</label>
                            <input type="text" class="form-control" id="name" name="name" asp-for="name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="email" name="email" asp-for="email">
                        </div>                                            
                        <div class="form-group">
                            <label for="address">Department :</label>
                            <select required class="form-control" asp-for="DepartmentID">
                                <option></option>
                                @foreach (var item in ViewBag.DepList)
                                {
                                    <option value="@item.Id">@item.DepartmentName</option>
                                }                                                              
                            </select>
                        </div>             
                        <div class="form-group">
                            <label for="salary">Salary:</label>
                            <input type="number" class="form-control" id="salary" name="salary" asp-for="salary">
                        </div>
                        <div class="form-group">
                            <label for="address">Select User:</label>
                            <select required class="form-control" asp-for="IdentityUserId">
                                <option></option>
                                @foreach (var item in ViewBag.UserList)
                                {
                                    <option value="@item.Id">@item.Email</option>
                                }


                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
