@model UserManagement.Models.User
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <!-- User profile picture -->
            <img src="https://via.placeholder.com/150" alt="User Profile Picture" class="img-thumbnail">
        </div>
        <div class="col-md-9">
            <!-- User profile details -->
            <h1>User Name</h1>
            <p><strong>Email:</strong> <input type="text" class="form-control" asp-for="name"></p>
            <p><strong>Location:</strong> City, Country</p>
            <p><strong>Joined:</strong> January 1, 2022</p>
            <p><strong>Last Active:</strong> April 14, 2023</p>
        </div>
    </div>
</div>