@model UserManagement.Models.Images

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Department Management</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Image" asp-action="SaveImage">
                        <div class="form-group">
                            <label>Image Name:</label>
                            <input type="text" class="form-control" asp-for="Name">
                        </div>
                        <div class="form-group">
                            <label>Image:</label>
                            <input type="file" class="form-control" asp-for="ImgName">
                        </div>
                        

                        <button type="submit" class="btn btn-primary btn-block">Add Image</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
