@model UserManagement.ViewModels.LoginViewModel

<form class="mx-1 mx-md-4" action="LogInUsers">
    <!-- Email input -->
    <div class="form-outline mb-4">
        <input type="email" id="form2Example1" class="form-control" asp-for="Email"/>
        <label class="form-label" for="form2Example1">Email address</label>
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
        <input type="password" id="form2Example2" class="form-control" asp-for="Password"/>
        <label class="form-label" for="form2Example2">Password</label>
    </div>
    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
        <button type="submit" class="btn btn-primary btn-lg">Login</button>
    </div>
   
</form>